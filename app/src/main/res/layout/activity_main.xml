<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name" android:id="@+id/title"
            android:textSize="36sp"
            android:gravity="center|center_horizontal|center_vertical"/>
    <TextView
            android:text="@string/artist_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/artist" android:gravity="center"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:srcCompat="@drawable/cilok" android:id="@+id/imageView"/>
    <TextView
            android:text="@string/source_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/source" android:gravity="center"/>

</LinearLayout>